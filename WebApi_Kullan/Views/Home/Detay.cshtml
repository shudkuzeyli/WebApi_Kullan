@model WebApi_Kullan.Models.Film

@{
	ViewData["Title"] = "Detay";
}

<div class="row">
<div class="col-xxl-12">
	<div class="card">
		<div class="card-header">
				@Model.FilmAdi
		</div>
		<div class="card-body">
			<table class="table">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Film Adı</th>
							<th scope="col">Yönetmen</th>
						</tr>
					</thead>
					<tr>
						<td>@Model.Id</td>
						<td>@Model.FilmAdi</td>
						<td>@Model.Yonetmen</td>
					</tr>
			</table>
		</div>
	</div>
</div>
</div>

<form asp-controller="Film" asp-action="Detay" method="post">
	<input type="hidden" asp-for="Id" />
	<div class="mb-3">
		<label asp-for="Id" class="form-label">ID</label>
		<input asp-for="Id" class="form-control" readonly />
		<span asp-validation-for="Id" class="text-danger"> </span>
	</div>
	<div class="mb-3">
		<label asp-for="FilmAdi" class="form-label">Film Adı</label>
		<input asp-for="FilmAdi" class="form-control" disabled />
		<span asp-validation-for="FilmAdi" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="Yonetmen" class="form-label">Yönetmen</label>
		<input asp-for="Yonetmen" class="form-control" disabled />
		<span asp-validation-for="Yonetmen" class="text-danger"></span>
	</div>
	<div class="butonuSagaTasi">
		<a class="btn btn-secondary mr-5" asp-action="FilmList"><i class="fa fa-arrow-alt-circle-left"></i> Listeye geri dön</a>
		<button type="submit" class="btn btn-danger">SİL</button>
	</div>
</form>
